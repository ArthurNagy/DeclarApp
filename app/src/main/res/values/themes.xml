<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/use_light_navigation</item>

        <item name="bottomSheetDialogTheme">@style/Theme.StaySafe.BottomSheetDialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.StaySafe.Dialog</item>

        <item name="materialButtonStyle">@style/Widget.StaySafe.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.StaySafe.OutlinedButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/Widget.StaySafe.ExtendedFloatingActionButton</item>
        <item name="textInputStyle">@style/Widget.StaySafe.TextInput</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.StaySafe.Calendar</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.StaySafe.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.StaySafe.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.StaySafe.Large</item>
    </style>

    <style name="Theme.StaySafe">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>
    </style>

    <style name="Theme.StaySafe.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">?colorBackgroundFloating</item>
    </style>

    <style name="Theme.StaySafe.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/color_secondary</item>
    </style>

    <style name="ThemeOverlay.StaySafe.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/color_secondary</item>
    </style>

    <style name="ThemeOverlay.StaySafe.Calendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_secondary</item>
    </style>

    <style name="ThemeOverlay.StaySafe.OutlinedButton" parent="ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>

    <style name="ShapeAppearance.StaySafe.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/small_shape_radius</item>
    </style>

    <style name="ShapeAppearance.StaySafe.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_shape_radius</item>
    </style>

    <style name="ShapeAppearance.StaySafe.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/large_shape_radius</item>
    </style>
</resources>