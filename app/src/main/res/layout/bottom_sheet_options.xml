<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".OptionsBinding" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/first_keyline"
        android:paddingBottom="@dimen/first_keyline"
        android:clipToPadding="false"
        app:paddingBottomSystemWindowInsets="@{true}">

        <TextView
            android:id="@+id/donate"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_paper_roll_24dp"
            android:drawablePadding="@dimen/second_keyline"
            android:gravity="center_vertical"
            android:padding="@dimen/first_keyline"
            android:text="@string/buy_me_a_paper_roll"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/theme"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_brightness_24dp"
            android:drawablePadding="@dimen/second_keyline"
            android:gravity="center_vertical"
            android:padding="@dimen/first_keyline"
            android:text="@string/change_theme"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

        <TextView
            android:id="@+id/source_code"
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:background="?attr/selectableItemBackground"
            android:drawableStart="@drawable/ic_github_24dp"
            android:drawablePadding="@dimen/second_keyline"
            android:gravity="center_vertical"
            android:padding="@dimen/first_keyline"
            android:text="@string/view_source_code"
            android:textAppearance="?attr/textAppearanceSubtitle1" />

    </LinearLayout>
</layout>
